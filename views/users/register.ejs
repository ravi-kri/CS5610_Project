<% include ../styling/header %>

<div class="container text-center">
    <div class="row">
        <div style="width: 30%; margin: 30px auto;">
            <form action="/register" method="POST">
                <h1 class="h3 mb-3 font-weight-normal">Please enter the following details</h1>
                <div class="form-group">
                    <label for="fname"></label>
                    <input class="form-control" id="fname" type="text" name="firstName" placeholder="First Name" required>
                </div>
                <div class="form-group">
                        <label for="lname"></label>
                    <input class="form-control"id="lname" type="text" name="lastName" placeholder="Last Name" required>
                </div>
                <div class="form-group">
                        <label for="emailid"></label>
                    <input class="form-control" id="emailid" type="email" name="email" placeholder="E-mail" required>
                </div>
                <div class="form-group">
                    <label for="typeofuser"></label>
                    <select class="form-control" name="type" id="typeofuser"> 
                        <option value="chef">Chef(I wanna add recipes)</option>
                        <option value="normal">Foodie(I wanna browse and bookmark recipes)</option>
                    </select>
                </div>
                <div class="form-group">
                        <label for="username"></label>
                    <input class="form-control" id="username" type="text" required name="username" placeholder="Choose a username">
                </div>
                <div class="form-group">
                        <label for="pass"></label>
                    <input class="form-control" id="pass" type="password" required name="password" placeholder="Set a Password">
                </div>
                <div class="form-group">
                    <button class="btn btn-info btn-block">Sign Up</button>
                </div>
            </form>
        </div>
    </div>
</div>
</body>
</html>