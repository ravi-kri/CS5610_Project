<% include ./styling/header %>
<div class="container">
        <header class="jumbotron">
                <div class="container" id="searchdesc">
                    <h1 id="greeting"><span class="glyphicon glyphicon-grain align-bottom" aria-hidden="true"></span> Recipe
                        Center</h1>
                    <div>
                        <p>View the best recipes on Recipe Center</p>
                        
                            <div class="form-group has-feedback">
                                <label for="search"></label>
                                <form method="POST" action="/api/search">
                                <input class="form-control" type="text" name="search" placeholder="Search recipes"
                                       autocomplete="off"/>
                                       <br>
                                <button class="btn btn-danger">Search</button>
                              </form>
                            </div>
                     
                    </div>
                </div>
            </header>
               
       
   

    <div class="container my-5">
      <div class="row text-center" style="display:flex; flex-wrap: wrap;">
                <% noMatch.forEach(function(recipe){ %>
             <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <a href="/recipes/<%= recipe._id %>"><img class="gridhome" src="<%= recipe.image_url %>"></a>
                    <div class="caption">
                        <h4> <%= recipe.title %> </h4>
                        <h3>Submitted by : <%= recipe.publisher %></h3>
                        <form  action="/api/search/id" method="POST">
                        <h5><button class="btn btn-info">View Recipe</button></h5>
                        <input type="hidden" name="recipeid" value="<%= recipe.recipe_id %>">  
                        </form>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
        </div>
    </div>

                 
      
   
</div>

