<% include ../styling/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a new Recipe</h1>
        <div style="width:30%; margin: 30px auto;">
            <form action="/recipes" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <input class="form-control" type="text" name="recipe[name]" placeholder="name">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>

                <div class="form-group">
						<textarea name="recipe[description]" placeholder="Describe your recipe">

							</textarea>
                    <!-- <input class="form-control" type="text" name="recipe[description]" placeholder="Describe your recipe"> -->
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/recipes">Go back</a>
        </div>
    </div>
</div>


<% include ../styling/footer %>
