<% include ../styling/header %>

<div class="container">
	<div class="row">
		<h1 style="text-align: center;">Edit your Recipe</h1>
		<div style="width:30%; margin: 30px auto;">
			<form action="/recipes/<%= recipe._id%>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[name]" value="<%= recipe.name %>">
				</div>
				<div class="form-group">
					<label for="image">Image</label>
					<input type="file" id="image" name="image" accept="image/*">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[location]" value="<%= recipe.location %>" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="recipe[description]" value="<%= recipe.description %>" >
				</div>

				<h3> More Features:</h3>
				<div class="form-group">
					<input type="checkbox" name="recipe[features]" value="Toilets"> Toilets<br>

				</div>
				<div class="form-group">
					<input type="checkbox" name="recipe[features]" value="Trash"> Trash<br>

				</div>
				<div class="form-group">
					<input type="checkbox" name="recipe[features]" value="PicnicTable"> Picnic Tables<br>

				</div>
				<div class="form-group">
					<input type="checkbox" name="recipe[features]" value="Barbeque"> Barbeque <br>

				</div>

				<h3> Activities: </h3>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Biking"> Biking<br>
				</div>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Fishing" > Fishing<br>
				</div>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Paddling" > Paddling<br>
				</div>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Swimming" > Swimming<br>
				</div>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Boating" > Boating<br>
				</div>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Hiking" > Hiking<br>
				</div>

				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="SnowSports" > Snow Sports<br>
				</div>
				<div class="form-group">
					<input type="checkbox" name="recipe[activities]" value="Wildlife" > Wildlife watching<br>
				</div>

				<div class="form-group">
					<button class="btn btn-success btn-block">Update</button>
				</div>
			</form>
			<!-- <a href="/userProfile">Go back</a> -->
		</div>
	</div>
</div>


<% include ../styling/footer %>
