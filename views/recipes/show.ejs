<% include ../styling/header %>

<div class="container">
	<div class="row">
	<div class="col-md-9">
		<div class="thumbnail">
			<img class="img-responsive" src="<%= recipe.image %>">
			<div class="caption-full">
			
			<form action="/bookmarked" method="POST">
				<h4><a><%= recipe.name %></a></h4>
				<p><%= recipe.description %></p>
				<p>
					<em>Submitted by : <%= recipe.author.username%></em>
				</p>
				<button class="btn btn-default btn-sm">
						<span class="glyphicon glyphicon-bookmark"></span> Bookmark
					  </button>
				<input type="text" hidden name="idofrecipe" value="<%= recipe._id%>" >
			</form>
			</div>
		</div>
		<div class="well">
			<div class="text-right">
				<a class="btn btn-primary" href="/recipes/<%= recipe._id%>/comments/new">Add new Comment</a>
			</div>
			<hr>
			<% recipe.comments.forEach(function(comment){ %>
			<div class="row">
				<div class="col-md-12">
					<strong><%= comment.author.username %></strong>
					<span class="pull-right"><%= moment(comment.createdAt).fromNow() %></span>
					<p>
						<%= comment.text %>
					</p>
					<% if(currentUser && comment.author.id.equals (currentUser._id)) { %>
					<a class="btn btn-xs btn-warning" href="/recipes/<%= recipe._id %>/comments/<%= comment._id%>/edit">Edit</a>
					<form class="delete-form" action="/recipes/<%= recipe._id %>/comments/<%= comment._id%>?_method=DELETE" method="POST">
						<input type="submit" class="btn btn-xs btn-danger" value="Delete">
					</form>
					<% } %>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</div>
</div>

<% include ../styling/footer %>
