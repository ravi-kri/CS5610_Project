<% include ./styling/header %>

<h1 id="userGreeting"> Hi, <%= currentUser.firstName %> <%= currentUser.lastName %> </h1>

<div class="container">
    <div class="row">
        <div id="accountdetails" class="col-md-3">
            <p class="lead">Your account details :</p>
            <h4 class="userprofile"> First Name : <span id="userdetails"><%= currentUser.firstName %></span></h4>
            <h4 class="userprofile"> Last Name : <span id="userdetails"><%= currentUser.lastName %></span></h4>
            <h4 class="userprofile"> Email : <span id="userdetails"><%= currentUser.email %></span></h4>
            <h4 class="userprofile"> Username : <span id="userdetails"><%= currentUser.username %></span></h4>
            <a href="/profile/<%= currentUser.id %>/edit" class="btn btn-warning btn-block">Edit Profile</a>
        </div>

        <div class="col-md-9">
            <% if(currentUser.type == "chef"){ %>
                <p class="lead">Recipes you've added so far:</p>
                <div class="row">
                    <% recipes.forEach(function(recipe){ %>
                        <div class="col-10 mx-auto col-md-6 col-lg-4 my-3">
                            <div class="card">
                                <img src="<%= recipe.image %>" class="img-card-top" style="height:14rem;width:100%"
                                     alt="recipe"/>
                                <div class="card-body">
                                    <h5 class="card-title"><%= recipe.name %></h5>
                                    <h6><a href="/profile/<%= recipe.author.id %>"><%= recipe.author.username %> </a>
                                    </h6>
                                </div>
                                <div class="card-footer">
                                    <a href="/recipes/<%= recipe._id %>" class="btn btn-info  btn-sm">View Recipe </a>
                                    <a href="/recipes/<%= recipe._id %>/edit">
                                        <button class="btn btn-warning  btn-sm ">Edit</button>
                                    </a>
                                    <form class="delete-form" action="/recipes/<%= recipe._id %>?_method=DELETE"
                                          method="POST">
                                        <button class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this item?');"
                                        >Delete
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                </div>

        </div>

        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <p class="lead">Recipes added by others:</p>
            <div class="row">
                <% allRecipe.forEach(function(recipe){ %>
                    <% if (recipe.author.username != currentUser.username){ %>
                        <div class="col-10 mx-auto col-md-6 col-lg-4 my-3">
                            <div class="card">
                                <img src="<%= recipe.image %>" class="img-card-top" style="height:14rem;width:100%"
                                     alt="recipe"/>
                                <div class="card-body">
                                    <h5 class="card-title"><%= recipe.name %></h5>
                                    <h6><a href="/profile/<%= recipe.author.id %>"><%= recipe.author.username %> </a>
                                    </h6>
                                </div>
                                <div class="card-footer">
                                    <a href="/recipes/<%= recipe._id %>" class="btn btn-info  btn-sm">View Recipe </a>
                                </div>
                            </div>
                        </div>
                <% } }); %>
            </div>
        </div>
        <% } %>

        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <p class="lead">Bookmarked Recipes by our Chefs</p>
            <div class="row">
                <% bookmarkedRecipesforSending.forEach(function(recipe){ %>
                    <div class="col-10 mx-auto col-md-6 col-lg-4 my-3">
                        <div class="card">
                            <img src="<%= recipe.image %>" class="img-card-top" style="height:14rem;width:100%"
                                 alt="recipe"/>
                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.name %></h5>
                                <h6><a href="/profile/<%= recipe.author.id %>"><%= recipe.author.username %> </a>
                                </h6>
                            </div>
                            <div class="card-footer">
                                <a href="/recipes/<%= recipe._id %>" class="btn btn-info  btn-sm">View Recipe </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>


        <div class="col-md-3">
        </div>
        <div class="col-md-9">
            <p class="lead">Bookmarked Recipes by people around the world</p>
            <div class="row">
                <% bookmarkedRecipesapiarray.forEach(function(recipe){ %>
                    <div class="col-10 mx-auto col-md-6 col-lg-4 my-3">
                        <div class="card">
                            <img src="<%= recipe.image_url %>" class="img-card-top" style="height:14rem;width:100%"
                                 alt="recipe"/>


                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.title %></h5>
                                <h6>Published By: <%= recipe.publisher %> </h6>
                            </div>
                            <div class="card-footer">

                                <label for="recipe_id"></label>
                                <form action="/details" method="GET">

                                    <button class="btn btn-info">View Recipe</button>

                                    <input type="hidden" name="recipe_id" value="<%= recipe.recipe_id %>">
                                </form>

                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
    </div>
</div>
</body>

</html>