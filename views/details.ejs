<% include ./styling/header %>

<div class="container">
    <div class="row">
        <div class="col-10 mx-auto col-md-6 my-3">
            <img class="d-block w-100" src="<%= noMatch.image_url %>">
            <br>

            <% if(currentUser){ %>
                <% if(!alreadyBookmarked){ %>
                    <form action="/bookmarkedapi" method="POST">
                        <button class="btn btn-danger ">
                            <i class="fa fa-bookmark"></i> Add
                        </button>
                        <input type="text" hidden name="title" value="<%= noMatch.title %>">
                        <input type="text" hidden name="source_url" value="<%= noMatch.source_url %>">
                        <input type="text" hidden name="publisher_url" value="<%= noMatch.publisher_url %>">
                        <input type="text" hidden name="recipe_id" value="<%= noMatch.recipe_id %>">
                        <input type="text" hidden name="image_url" value="<%= noMatch.image_url %>">
                        <input type="text" hidden name="publisher" value="<%= noMatch.publisher %>">
                    </form>
                <% } else if(alreadyBookmarked){ %>
                    <form action="/removebookmarkedapi" method="POST">
                        <button class="btn btn-danger ">
                            <i class="fa fa-bookmark"></i> Remove
                        </button>
                        <input type="text" hidden name="title" value="<%= noMatch.title %>">
                        <input type="text" hidden name="source_url" value="<%= noMatch.source_url %>">
                        <input type="text" hidden name="publisher_url" value="<%= noMatch.publisher_url %>">
                        <input type="text" hidden name="recipe_id" value="<%= noMatch.recipe_id %>">
                        <input type="text" hidden name="image_url" value="<%= noMatch.image_url %>">
                        <input type="text" hidden name="publisher" value="<%= noMatch.publisher %>">
                    </form>
            <% }}    else { %>
                <form action="/bookmarkedapi" method="POST">
                    <button class="btn btn-danger ">
                        <i class="fa fa-bookmark"></i> Add
                    </button>
                    <input type="text" hidden name="title" value="<%= noMatch.title %>">
                    <input type="text" hidden name="source_url" value="<%= noMatch.source_url %>">
                    <input type="text" hidden name="publisher_url" value="<%= noMatch.publisher_url %>">
                    <input type="text" hidden name="recipe_id" value="<%= noMatch.recipe_id %>">
                    <input type="text" hidden name="image_url" value="<%= noMatch.image_url %>">
                    <input type="text" hidden name="publisher" value="<%= noMatch.publisher %>">
                </form>
            <% } %>

            <br>
            <h5>Recipe Bookmarked by:-</h5>
            <ul>
                <% users.forEach(function(user){ %>
                    <li>
                        <h4>
                            <a href="/profile/<%= user._id %>"><%= user.username %></a>

                        </h4>
                    </li>
                <% }); %>
            </ul>
        </div>
        <div class="col-10 mx-auto col-md-6 my-3">

            <h2><%= noMatch.title %></h2>
            <br>
            <h3 class="text-warning text-styling">Submitted by :

                <%= noMatch.publisher %>

            </h3>
            <br>
            <ul class="list-group mt-4">
                <h2 class="mt-3 mb-4">Ingredients</h2>
                <% noMatch.ingredients.forEach(function(item){ %>
                    <li class="list-group-item text-styling">
                        <%= item %>
                    </li>
                <% }) %>
            </ul>
            <br>
            <a class="btn btn-primary" target="_blank" href=" <%= noMatch.source_url %>"> View Source </a>


        </div>
    </div>
</div>
</body>
</html>